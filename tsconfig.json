{
  "compilerOptions": {
    "strict": true,
    "module": "ES2015",
    "moduleResolution": "node",
    "lib": ["es2015", "es2016", "es2017", "es2018", "es2019", "es2020", "DOM"],
    "target": "ES5",
    "outDir": "./dist",
    "esModuleInterop": true,
    "allowJs": true,
    "allowImportingTsExtensions": true,
    "noEmit": true
  },
  "exclude": ["node_modules", "./dist"],
  "include": ["**/*"]
}
